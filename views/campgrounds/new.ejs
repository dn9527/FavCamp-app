<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div>
      <h1>Add new campground</h1>
    </div>
    <div class="row">
      <form action="/campgrounds" method="POST">
        <input class="form-control" type="text" name="campground[name]" placeholder="name" />
        <input class="form-control" type="text" name="campground[image]" placeholder="image url" />
        <input class="form-control" type="text" name="campground[description]" placeholder="description" />

        <button class="btn btn-lg btn-primary">Submit!</button>
      </form>
    </div>
    <a href="/campgrounds">Back</a>
  </div>
</div>

<%- include("../partials/footer") %>